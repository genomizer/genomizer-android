<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="se.umu.cs.pvt151.SettingsActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/settings_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_textview"
        android:layout_marginLeft="4dp"
        android:entries="@array/server_list" />
    
    <EditText 
         android:id="@+id/settings_input_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:singleLine="true"
        android:visibility="invisible"
        android:layout_below="@id/settings_textview"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:hint="Small Text"
        />
    
       
       <Button
        android:id="@+id/settingsAddButton"
        android:layout_below="@id/spinner1"        
       	android:layout_alignParentRight="true"
       	android:layout_marginRight="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickaddNewURL"
        android:textSize="12sp"  
        android:visibility="invisible"      
        android:text="Add URL" />
       
    
    
       

</RelativeLayout>
