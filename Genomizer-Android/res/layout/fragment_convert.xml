<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lbl_convert_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversion parameters"
        android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/lbl_convert_bowtie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bowtie parameters"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_convert_bowtie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:hint="-a -m 1 --best -p 10 -v 2" >

            <requestFocus />
        </EditText>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
     		/>
    </LinearLayout>

    <TextView
        android:id="@+id/lbl_convert_gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genomefile"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_convert_gen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:hint="d_melanogaster_fb5_22" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/lbl_convert_smoothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smoothing"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_convert_smoothing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:hint="10 5 0 0" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/lbl_convert_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edit_convert_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:hint="y 10" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_convert_convert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Convert files"
        android:layout_marginTop="16dp" />

</LinearLayout>
